extends layout

block content
 <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.c    ss" rel="stylesheet">
 <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css    " rel="stylesheet">

 .container
  .col-sm-6.col-sm-offset-3
    h1
      span.fa.fa-user
      | Add Local Account
      #message
       if message.length > 0
         .alert.alert-danger #{message}
    form(action='/connect/local', method='post')
      .form-group
        label Email
        input.form-control(type='text', name='email')
      .form-group
        label Password
        input.form-control(type='password', name='password')
      button.btn.btn-warning.btn-lg(type='submit') Add Local
    hr
    p
      a(href='/profile') Go back to profile
