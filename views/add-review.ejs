<!DOCTYPE html>
<html lang="en">
<% include header %>
<body>
    <% include navbar %>
 
    <div class="container">
        <div class="page-header">
            <h1>
                <span class="fa fa-comment-o">Review User</span>
            </h1>
        </div>
        <div class="panel panel-default">
			<form action="/add-review/<%=forUser%>" method="post">				
				<div id="user">
					<label>Full Name</label>
					<label>: <%= user.local.name %> </label>
					<div class="form-group">
						<label>Overall Rating (10 is best, 1 is worst)
							<div class="controls">
								<select id="selectbasic" name="rating" class="input-xlarge">
									<option>10</option>
									<option>9</option>
									<option>8</option>
									<option>7</option>
									<option>6</option>
									<option>5</option>
									<option>4</option>
									<option>3</option>
									<option>2</option>
									<option>1</option>
								</select>
							</div>
						</label>
					</div>
					<div class="form-group">
						<label>Comments</label>
						<textarea type="text" name="comments" class="form-control"></textarea>
					</div>
					<button type="submit" class="btn btn-warning btn-lg">Add Review</button>
				</div>
			</form>
        </div>

        <% include footer %>
    </div>
    <!-- /container -->
	
    <script type="text/javascript">
        $(document).ready(function() {
            //$('#about').addClass("active");
        });
    </script>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script
        src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
</body>
</html>
